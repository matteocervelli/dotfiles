# Application Stack Environment Variables

# =============================================================================
# Docker Registry
# =============================================================================
DOCKER_REGISTRY=registry.example.com/
APP_VERSION=latest

# =============================================================================
# FastAPI Application
# =============================================================================
APP_NAME=FastAPI App
APP_ENV=production
DEBUG=false
SECRET_KEY=generate_with_openssl_rand_base64_32
JWT_SECRET_KEY=generate_with_openssl_rand_base64_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# CORS
CORS_ORIGINS=https://example.com,https://www.example.com

# File uploads
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=info

# Celery
CELERY_WORKERS=4

# Flower
FLOWER_USER=admin
FLOWER_PASSWORD=change_me_please

# =============================================================================
# Next.js Application
# =============================================================================
NODE_ENV=production
NEXTJS_PORT=3000
NEXT_PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_APP_URL=https://example.com
NEXTAUTH_URL=https://example.com
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32
API_SECRET_KEY=generate_with_openssl_rand_base64_32
FEATURE_FLAG_ANALYTICS=true

# =============================================================================
# Vite + React SPA
# =============================================================================
VITE_PORT=5173
# Build-time variables (set during docker build):
# VITE_API_URL=https://api.example.com
# VITE_APP_NAME=My App
# VITE_ENVIRONMENT=production

# =============================================================================
# Shared Infrastructure
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=use_same_as_infrastructure_stack
POSTGRES_DB=app
REDIS_PASSWORD=use_same_as_infrastructure_stack
