# Observability Stack Environment Variables

# =============================================================================
# Grafana Configuration
# =============================================================================
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=change_me_please_use_strong_password
GF_SECRET_KEY=generate_with_openssl_rand_base64_32
GF_SERVER_ROOT_URL=https://grafana.example.com
GF_SERVER_DOMAIN=grafana.example.com

# Database (optional - leave as sqlite3 for simple setup)
GF_DATABASE_TYPE=sqlite3
# For PostgreSQL:
# GF_DATABASE_TYPE=postgres
# GF_DATABASE_HOST=postgres:5432
# GF_DATABASE_NAME=grafana
# GF_DATABASE_USER=grafana
# GF_DATABASE_PASSWORD=grafana_password

# Plugins (comma-separated list)
GF_INSTALL_PLUGINS=

# Feature toggles
GF_FEATURES=

# =============================================================================
# System Configuration
# =============================================================================
HOSTNAME=vps-production
