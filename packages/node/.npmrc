# =============================================================================
# NPM Configuration - Matteo Cervelli's dotfiles
# =============================================================================

# =============================================================================
# Registry Configuration
# =============================================================================

# Default registry
registry=https://registry.npmjs.org/

# Registry for scoped packages (example)
# @mycompany:registry=https://npm.mycompany.com/

# =============================================================================
# Security and Authentication
# =============================================================================

# Always use HTTPS
https-proxy=
proxy=

# Certificate settings
ca=
cafile=
strict-ssl=true

# =============================================================================
# Installation Preferences
# =============================================================================

# Save installed packages to package.json automatically
save=true
save-exact=false

# Save dev dependencies by default when using --save-dev
save-dev=true

# Engine strict mode - fail if Node.js version doesn't match
engine-strict=false

# =============================================================================
# Package Installation Behavior
# =============================================================================

# Install peer dependencies automatically
install-strategy=hoisted

# Automatically install peer dependencies
auto-install-peers=true

# Package lock file
package-lock=true
package-lock-only=false

# =============================================================================
# Performance and Caching
# =============================================================================

# Cache directory
cache=~/.npm

# Cache verification
cache-verify=true

# Prefer offline packages when available
prefer-offline=false

# Progress bar
progress=true

# =============================================================================
# Logging and Output
# =============================================================================

# Log level (silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=notice

# Unicode support
unicode=true

# Color output
color=always

# =============================================================================
# Development and Publishing
# =============================================================================

# Default author info for new packages
init-author-name=Matteo Cervelli
init-author-email=matteo@cervelli.dev
init-author-url=https://matteocervelli.dev
init-license=MIT
init-version=1.0.0

# Default package.json settings
init-main=index.js
init-test-command=npm test
init-git-tag-version=true

# =============================================================================
# Funding and Optional Dependencies
# =============================================================================

# Show funding information
fund=true

# Install optional dependencies
optional=true

# =============================================================================
# Scripts and Execution
# =============================================================================

# Script shell
script-shell=/bin/zsh

# Ignore scripts on install (security)
ignore-scripts=false

# =============================================================================
# Version and Updates
# =============================================================================

# Save prefix for version updates
save-prefix=^

# Update notifier
update-notifier=true

# =============================================================================
# Global Package Installation
# =============================================================================

# Global packages directory
# prefix=~/.npm-global

# =============================================================================
# Workspace Configuration
# =============================================================================

# Workspace configuration for monorepos
# workspaces-update=true

# =============================================================================
# Legacy and Compatibility
# =============================================================================

# Legacy peer deps (for compatibility with older packages)
legacy-peer-deps=false

# =============================================================================
# Audit and Security
# =============================================================================

# Audit level (low, moderate, high, critical)
audit-level=moderate

# Automatically fix vulnerabilities
# audit-fix=false

# =============================================================================
# End of NPM configuration
# =============================================================================